model User {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  email      String  @unique
  password   String
  firstname  String
  lastname   String
  isVerified Boolean @default(false)
}

model Forgot {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  hash   String
  userId String @unique
  email  String @unique
  ttl    String
}
